<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.PreGameFragment">

    <RelativeLayout
        android:id="@+id/relative_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/pre_game"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <ImageView
            android:id="@+id/main_field"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ship_buttons_layout"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="4dp"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:id="@+id/ship_buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dnd_ship_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="false"
                android:layout_alignParentBottom="false"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                android:src="@drawable/red_box" />

            <ImageView
                android:id="@+id/dnd_ship_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                android:src="@drawable/yellow_box" />

            <ImageView
                android:id="@+id/dnd_ship_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                android:src="@drawable/green_box" />

            <ImageView
                android:id="@+id/dnd_ship_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                android:src="@drawable/blue_box" />

            <ImageView
                android:id="@+id/dnd_ship_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                android:src="@drawable/white_box" />

        </LinearLayout>

    </RelativeLayout>
</FrameLayout>